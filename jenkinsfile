pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    deleteDir()
                    checkout([$class: 'GitSCM', branches: [[name: 'main']], userRemoteConfigs: [[url: 'https://github.com/Kamal-21/jenkins-pipeline.git']]])
                }
            }
        }

        stage('Build and Deploy') {
            steps {
                script {
                    echo 'Building and Deploying...'
                    sh "cp -r index.html /tmp/"
                }
            }
        }
    }
}

